<div class="form-title">
  <h1>Connexion Ã  mon compte</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-4 offset-lg-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label => "Adresse e-mail",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password, :label => "Mot de passe",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, :label => "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mb-5">
          <%= f.button :submit, "Connexion", class:"btn-new-form" %>
        </div>
      <% end %>
    <div>
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>
