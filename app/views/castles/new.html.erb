<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">

      <div class="mt-3 mb-3">
        <h1>Création de votre incroyable château</h1>
      </div>

      <%= simple_form_for(@castle) do |f|%>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :category, collection: Castle::CATEGORIES %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_day %>
          <%= f.input :special_feature, collection: Castle::SPECIAL_FEATURES %>
          <%= f.input :photo, as: :file %>
          <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class:"btn btn-primary mt-3" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "Retour à la liste", castles_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
