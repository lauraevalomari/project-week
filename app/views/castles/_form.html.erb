<%= simple_form_for(castle) do |f|%>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :special_feature %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
